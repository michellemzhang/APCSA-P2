import java.util.Scanner;

public class Numbers
{
	private int input;
	
	public Numbers(int whatnumber)
	{
		setNumber(0);
	}
	
	public void setNumber(int whatnumber)
	{
		input = whatnumber;
	}
	
	public static void main(String[] args)
	{
		Numbers myNumbers = new Numbers (12);
		myNumbers.setNumber(12);
		System.out.println(myNumbers.isGoofy(12));
		
		
		myNumbers.setNumber(15);
		System.out.println(myNumbers.isGoofy(15));
		
		myNumbers.setNumber(26);
		System.out.println(myNumbers.isGoofy(26));
		
		myNumbers.setNumber(8);
		System.out.println(myNumbers.isGoofy(8));
		
		myNumbers.setNumber(1243);
		System.out.println(myNumbers.isGoofy(1243));
		
		Scanner keyboard = new Scanner(System.in);
		System.out.print("How many goofy numbers do you want?");
		int count = keyboard.nextInt();
		
		System.out.print(myNumbers.getSomeGoofyNumbers(count));
		
		Scanner keyboard1 = new Scanner(System.in);
		System.out.print("How many goofy numbers do you want?");
		int count1 = keyboard1.nextInt();
	
		System.out.print(myNumbers.getSomeGoofyNumbers(count1));
	}
	
	
	public static boolean isGoofy(int num)
	{
		int input = num;
		int total = 0;
	
		if (input >= 10 && input <= 99)
		{

			int digit1 = input/10;
			int digit2 = input % 10;
			
			if (input % digit1 == 0)
			{
				total = total + digit1;
			}
			
			if (input % digit2 == 0)
			{
				total = total + digit2;
			}
		}
		if (input >= 0 && input <= 9)
		{
			int onlydigit = input;
			
			if (input % onlydigit == 0)
			{
				total = total + onlydigit;
			}
		}
		if (input >= 1000 && input <= 9999)
		{	
			int firstdigit = input/1000;
			int seconddigit = (input % 1000) / 100;
			int thirddigit = ((input % 1000) % 100) / 10;
			int fourthdigit = ((input % 1000) % 100) % 10;
			
			if (input % firstdigit == 0)
			{
				total = total + firstdigit;
			}
			if (input % seconddigit == 0)
			{
				total = total + firstdigit;
			}
		
			if (input % thirddigit == 0)
			{
				total = total + firstdigit;
			}
		
			if (input % fourthdigit == 0)
			{
				total = total + firstdigit;
			}
		}
	if (total % 2 == 0)
	{
		return false;
	}
	else
	{
		return true;
	}	
}

		
	public static int[] getSomeGoofyNumbers(int count)
	{
		int[] thegoofynumbers = new int[count];
		for (int i = 1; i <= count; i++)
		{
			for (int j = 0; j < thegoofynumbers.length; j++)
			{
				if (isGoofy(i) == true)
				{
					thegoofynumbers[j] = i;
					System.out.print(thegoofynumbers[j]);
				}
			}
		}
		
		return thegoofynumbers;
	}
}