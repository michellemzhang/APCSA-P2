import java.util.Random;
import java.util.Scanner;
import static java.lang.System.*;

public class GuessingGame
{
	private int upperBound;
	private int correct;

	public GuessingGame(int stop)
	{
		upperBound = stop;
	}

	public int playGame()
	{
		Random rand = new Random();
		Scanner keyboard = new Scanner(System.in);
		
		System.out.println("Guessing Game - how many numbers?" );
		upperBound = keyboard.nextInt();
		System.out.println("Enter a number between 1 and " + upperBound);
		int guess = keyboard.nextInt();
		
		int correct = (int)(upperBound*Math.random() +1);
		int numberofguesses = 0;
		
		while (guess != correct)	
		{
			if (guess > upperBound)
			{
				System.out.println("Number out of range!");
				System.out.println("Enter a number between 1 and " + upperBound);
				guess = keyboard.nextInt();
			}
				numberofguesses ++;	
				System.out.println("Enter a number between 1 and " + upperBound);
				guess = keyboard.nextInt();					
		}
		
		if (guess == correct && guess < upperBound)
		{			
			numberofguesses ++;
			System.out.print("Good job");			
		}
		
		return numberofguesses;	
	}

	public String toString()
	{
		String output= "It took " + playGame() + "to guess " + correct;
		return output;
	}
}